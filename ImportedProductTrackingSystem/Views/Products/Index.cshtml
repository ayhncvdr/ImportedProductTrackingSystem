@model IEnumerable<ImportedProductTrackingSystem.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th >
                
                    @Html.DisplayNameFor(model => model.Name)
                 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomOffice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceDate.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GoodsValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomsDutyRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VATRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomsDutyPaidToCustoms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VATBase)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValueAddedTaxPaidToCustoms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalImportValue)
            </th>

            <th style="width: 500px"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomOffice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceDate.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoodsValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomsDutyRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VATRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomsDutyPaidToCustoms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VATBase)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValueAddedTaxPaidToCustoms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalImportValue)
            </td>
            <td style="width: 500px">
                <a asp-action="Edit" asp-route-id="@item.Id" >Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" >Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" >Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
